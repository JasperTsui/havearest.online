<svg width="320" height="220" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyBg" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#70c5ce;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#ddd;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#dee047;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill="url(#skyBg)"/>
  
  <!-- 云朵 -->
  <ellipse cx="50" cy="40" rx="15" ry="8" fill="white" opacity="0.8"/>
  <ellipse cx="270" cy="30" rx="12" ry="6" fill="white" opacity="0.8"/>
  <ellipse cx="180" cy="50" rx="18" ry="10" fill="white" opacity="0.8"/>
  
  <!-- 管道 -->
  <rect x="220" y="0" width="40" height="80" fill="#32cd32" stroke="#228b22" stroke-width="2"/>
  <rect x="215" y="70" width="50" height="15" fill="#228b22"/>
  <rect x="220" y="140" width="40" height="80" fill="#32cd32" stroke="#228b22" stroke-width="2"/>
  <rect x="215" y="125" width="50" height="15" fill="#228b22"/>
  
  <!-- 小鸟 -->
  <g transform="translate(80, 100)">
    <!-- 身体 -->
    <ellipse cx="0" cy="0" rx="20" ry="15" fill="#ffff00" stroke="#ff8c00" stroke-width="2"/>
    <!-- 翅膀 -->
    <ellipse cx="-5" cy="-5" rx="12" ry="8" fill="#ff8c00"/>
    <!-- 眼睛 -->
    <circle cx="8" cy="-3" r="4" fill="white"/>
    <circle cx="10" cy="-3" r="2" fill="black"/>
    <!-- 嘴巴 -->
    <path d="M 15,-2 L 25,0 L 15,2 Z" fill="#ff6600"/>
  </g>
  
  <!-- 地面 -->
  <rect x="0" y="190" width="320" height="30" fill="#dee047"/>
  <rect x="0" y="190" width="320" height="5" fill="#9acd32"/>
  
  <!-- 分数显示 -->
  <text x="160" y="35" font-family="Arial Black" font-size="24" fill="white" text-anchor="middle" font-weight="bold" stroke="#333" stroke-width="1">Flappy Bird</text>
  
  <!-- 运动轨迹线 -->
  <path d="M 40,100 Q 120,80 200,110" stroke="rgba(255,255,255,0.5)" stroke-width="3" fill="none" stroke-dasharray="5,5"/>
</svg> 